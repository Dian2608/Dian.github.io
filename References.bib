@article{llosaBacterialConjugationTwostep2002,
  title = {Bacterial Conjugation: A Two-Step Mechanism for {{DNA}} Transport},
  shorttitle = {Bacterial Conjugation},
  author = {Llosa, Matxalen and Gomis-Rüth, F. Xavier and Coll, Miquel and family=Cruz Fd, given=Fernando, prefix=de la, useprefix=true},
